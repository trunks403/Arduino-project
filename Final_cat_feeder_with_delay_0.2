// Servo with long delay with code for hour

#include <Servo.h>             //Servo library

const unsigned long SECOND = 1000;
const unsigned long HOUR = 3600*SECOND;


Servo servo_test;        //initialize a servo object for the connected servo            
int angle = 0;           // angle with begin
 
void setup() 
{ 
  servo_test.attach(9);      // attach the signal pin of servo to pin9 of arduino
} 
  
void loop() 
{ 
  for(angle = 0; angle < 70; angle += 1)    // command to move from 0 degrees to 180 degrees 
  {                                  
    servo_test.write(angle);                 //command to rotate the servo to the specified angle
    delay(15);                       
  } 
 
 // delay(6000); oude delay
 //delay(5UL * DELAY_1_HOUR); // Delay 5 hours
 delay(4*HOUR); // Delay 4 hours After 4 hours give 13,6 gram food  24 hour give 5 time feeding times is 65 gram food
 
  for(angle = 70; angle>=1; angle-=5)     // command to move from 180 degrees to 0 degrees 
  {                                
    servo_test.write(angle);              //command to rotate the servo to the specified angle
    delay(0);                       
  } 
    delay(0);
}
